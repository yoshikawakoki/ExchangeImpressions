<div class="container">
  <div class="row">
    <div class="col-lg-7, mx-auto">
      <div>
        <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "40x40" %>
        <%= @user.name %>
      </div>
      <div>
        フォロー数　フォロワー数　投稿数
      </div>
    </div>
  </div>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col">
        <% post.post_images.first(1).each do |post_image| %>
          <%= link_to post_path(post.id) do %>
            <%= attachment_image_tag post_image, :image, size: "250x250" %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>