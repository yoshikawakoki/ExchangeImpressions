<div class="container">
  <div class="row">
    <div class="col-lg-7, mx-auto">
      <h2>ユーザー情報編集</h2>
      <%= form_with model: @user, local: true do |f| %>
        <div class="field">
          <%= f.attachment_field :profile_image %>
        </div>
        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.label :email %>
          <%= f.text_field :email %>
        </div>
        <div class="field">
          <%= f.submit "更新", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>