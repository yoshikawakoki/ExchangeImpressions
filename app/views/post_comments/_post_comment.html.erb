<% post.post_comments.each do |post_comment| %>
  <% post_comment_user = post_comment.user %>
  <tr>
    <th>
      <%= link_to user_path(post_comment_user.id) do %>
        <%= attachment_image_tag post_comment_user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "40x40" %><br>
      	<%= post_comment_user.name %>
    	<% end %>
    </th>
    <th><%= post_comment.content %></th>
  </tr>
<% end %>