<% if post.favorited_by?(current_user) %>
  <%# いいねしている場合 %>
  <i><%= link_to post.favorites.count, post_favorites_path(post), method: :DELETE, remote: true, class: "fas fa-heart heart_red" %></i>
<% else %>
  <%# いいねしていない場合 %>
  <i><%= link_to post.favorites.count, post_favorites_path(post), method: :POST, remote: true, class: "fas fa-heart heart_blue" %></i>
<% end %>