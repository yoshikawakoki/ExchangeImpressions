<div class="container">
  <div class="row">
    <h2>ハッシュタグ #<%= @hashtag.hashname %> （全<%= @posts.count %>件）</h2>
  </div>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-lg-4 mt-3">
        <% post.post_images.first(1).each do |post_image| %>
          <%= link_to post_path(post.id) do %>
            <%= attachment_image_tag post_image, :image, size: "300x300" %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>